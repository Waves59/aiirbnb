<div class="row">
    <div class="col-md-3">
            <%= image_tag avatar_url(@user), class: "avatar-large" %> 
            <div class ="panel panel-default">
                <div class="panel-heading"><%= @user.fullname %></div>
                <div class="panel-body">
                    Email: <%= @user.email %></br>
                    Téléphone: <%= @user.phone_number %></br>

                </div>
            </div>
            <h4>Annonces (<%= @rooms.length %>)</h4><br>
            <div class="row">
                <% @rooms.each do |room| %>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading preview">
                            <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
                        </div>
                        <div class="panel-body">
                            <%= link_to room.listing_name, room %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
    </div>
</div>